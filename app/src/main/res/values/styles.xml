<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view_buttons">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">62dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="view_sensors">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">61dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">4</item>
       </style>

    <style name="view_seek_bars">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="libCornerRadius">20</item>
        <item name="backgroundColor">@color/background_seek_bar</item>
        <item name="progressColor">@color/color_progress</item>
        <item name="android:textColor">@color/white</item>
        <item name="step">1</item>
        <item name="defaultValue">0</item>
    </style>

    <style name="view_btn_add_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/background_head</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/text_btn_add_new_view</item>
    </style>

</resources>
